<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/main.css">
  <link rel="stylesheet" href="/customstyle.css">
  <style media="screen">

    /* border-left: 4px dotted #0e93cc; */
    /* background: rgb(15, 147, 204); */


    /* $color1: rgba(91, 192, 235, 1);
    $color2: rgba(253, 231, 76, 1);
    $color3: rgba(155, 197, 61, 1);
    $color4: rgba(229, 89, 52, 1);
